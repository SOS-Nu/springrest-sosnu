<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add-fulltext-index-to-jobs" author="nhokanhanh@gmail.com">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists indexName="ft_jobs_name_desc" tableName="jobs"/>
            </not>
        </preConditions>
        <sql>
            ALTER TABLE jobs ADD FULLTEXT INDEX ft_jobs_name_desc (name, description);
        </sql>
        <rollback>
            <sql>
                DROP INDEX ft_jobs_name_desc ON jobs;
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>